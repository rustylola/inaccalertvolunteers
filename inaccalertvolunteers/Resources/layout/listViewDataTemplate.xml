<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/gradientem">

    <TextView
        android:id="@+id/datetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="@string/datetitle"
        android:gravity="center"
        android:textColor="@color/btnColorWhite"/>

    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/user_name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/nameofuser"
            android:textColor="@color/btnColorWhite"/>

    </LinearLayout>

    <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="@color/btnColorWhite"/>

    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/volunteer_name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/nameofvolunteer"
            android:textColor="@color/btnColorWhite"/>

    </LinearLayout>

    <TextView
            android:id="@+id/volunteername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="@color/btnColorWhite"/>

    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/address_name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/addressofaccident"
            android:textColor="@color/btnColorWhite"/>

    </LinearLayout>
    
        <TextView
            android:id="@+id/addressname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="@color/btnColorWhite"/>

    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/category_name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/accidentcategoryshow"
            android:textColor="@color/btnColorWhite"/>

    </LinearLayout>

    <TextView
            android:id="@+id/categoryname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:textColor="@color/btnColorWhite"/>
   
    <LinearLayout
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/description_name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/accidentdesc"
            android:textColor="@color/btnColorWhite"/>


    </LinearLayout>
    <TextView
            android:id="@+id/descriptionname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textColor="@color/btnColorWhite"/>

</LinearLayout>
